/*
class Node
{
    int data;
    Node left;
    Node right;
    Node(int data)
    {
        this.data = data;
        left=null;
        right=null;
    }
}
*/
class Solution {
    // return the Kth largest element in the given BST rooted at 'root'
    void helper(Node root, ArrayList<Integer> al ){
        if(root==null)return ;
        
       
        
        helper(root.left , al);
        al.add(root.data);
        helper(root.right,al);
        
    }
    public int kthLargest(Node root, int k) {
        // Your code here
          ArrayList<Integer> al=new ArrayList<>();
         helper(root,al);
         if(al.size()<k)return -1;
        return al.get(al.size()-k);
    }
}
