/*
class Node {
    int data;
    Node left, right;

    Node() {
        this.data = 0;
        this.left = this.right = null;
    }

    Node(int data) {
        this.data = data;
        this.left = this.right = null;
    }
}
*/
class Solution {
    Node head , lastNode;
    void inOrder(Node root){
        if(root==null)return ;
        
        inOrder(root.left);
        if(head==null)head=root;
        if(lastNode!=null)lastNode.right=root;
        root.left=lastNode;
        lastNode=root;
        inOrder(root.right);
    }
    
    Node bToDLL(Node root) {
        // code here
        inOrder(root);
        return head;
    }
}
