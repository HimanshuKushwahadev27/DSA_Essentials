class Solution {
    public ArrayList<Node> findPreSuc(Node root, int key) {
        Node pre = null, suc = null;
        Node curr = root;

        while (curr != null) {
            if (curr.data < key) {
                pre = curr; // possible predecessor if we dont find key
                curr = curr.right;
            } else if (curr.data > key) {
                suc = curr; // possible successor if we dont find key
                curr = curr.left;
            } else {
                break;
            }
        }

        if (curr != null) {
            if (curr.left != null) {
                Node temp = curr.left;
                while (temp.right != null) temp = temp.right;
                pre = temp;
            }
            if (curr.right != null) {
                Node temp = curr.right;
                while (temp.left != null) temp = temp.left;
                suc = temp;
            }
        }

        ArrayList<Node> result = new ArrayList<>();
        result.add(pre);
        result.add(suc);
        return result;
    }
}
