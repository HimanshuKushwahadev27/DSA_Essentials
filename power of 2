// User function Template for Java

class Solution {
    // Function to check if given number n is a power of two.
    public static boolean isPowerofTwo(int n) {
        // code here
        if(n==1){
            return true;
        }
        
        for(int i=2;i<=n ;i=i*2){
            if(i==n){
                return true;
            }
        }
        return false;
    }
}
